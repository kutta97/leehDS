// 2562번. 최댓값
#include <iostream>
using namespace std;

int main()
{
    int max = 0;
    int index;
    int arr[9];

    for(int i = 0; i < 9; i++)
    {
        cin >> arr[i];
        if(max < arr[i])
        {
            max = arr[i];
            index = i;
        }
    }
    
    cout << max << endl << index + 1;
    
    return 0;
}
